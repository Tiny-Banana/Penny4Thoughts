<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/catNBudgetedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Education"
        android:textColor="@color/primary_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/catNBudgetedImg"
        app:layout_constraintStart_toEndOf="@+id/catNBudgetedImg"
        app:layout_constraintTop_toTopOf="@+id/catNBudgetedImg" />

    <ImageView
        android:id="@+id/catNBudgetedImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/education" />

    <TextView
        android:id="@+id/catNBudgetedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/border_rectangle"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp"
        android:text="Add Budget"
        android:textColor="@color/dark_green"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>