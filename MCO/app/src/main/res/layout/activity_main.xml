<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_beige"
    tools:context=".MainActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawerView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_drawer_menu"
        app:headerLayout="@layout/drawer_header"
        android:fitsSystemWindows="true">
    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.cardview.widget.CardView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardBackgroundColor="@color/off_beige"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/zeyada"
                    android:text="Penny4Thoughts"
                    android:textColor="@color/dark_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/toolbar"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

                <TextView
                    android:id="@+id/incomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Total Income"
                    android:textColor="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.411"
                    app:layout_constraintStart_toEndOf="@+id/expenseTitle"
                    app:layout_constraintTop_toTopOf="@+id/expenseTitle" />

                <TextView
                    android:id="@+id/expenseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Total Expense"
                    android:textColor="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/balanceTitle" />

                <TextView
                    android:id="@+id/expenseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="0.00"
                    android:textColor="@color/light_red"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/tvP3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tvP1"
                    app:layout_constraintTop_toTopOf="@+id/tvP1" />

                <TextView
                    android:id="@+id/tvP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="₱"
                    android:textColor="@color/light_red"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/expenseTitle"
                    app:layout_constraintTop_toBottomOf="@+id/expenseTitle" />

                <TextView
                    android:id="@+id/incomeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="0.00"
                    android:textColor="@color/light_green"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tvP3"
                    app:layout_constraintTop_toTopOf="@+id/tvP3" />

                <TextView
                    android:id="@+id/tvP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="₱"
                    android:textColor="@color/light_green"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/incomeTitle"
                    app:layout_constraintTop_toBottomOf="@+id/incomeTitle" />

                <TextView
                    android:id="@+id/balanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="All Accounts"
                    android:textColor="@color/dark_green"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/tvBracket1"
                    app:layout_constraintTop_toTopOf="@+id/tvBracket1" />

                <TextView
                    android:id="@+id/tvP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="₱"
                    android:textColor="@color/dark_green"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/balanceTitle"
                    app:layout_constraintTop_toTopOf="@+id/balanceTitle" />

                <TextView
                    android:id="@+id/balanceCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="0.00"
                    android:textColor="@color/dark_green"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/tvP2"
                    app:layout_constraintTop_toTopOf="@+id/tvP2" />

                <TextView
                    android:id="@+id/tvBracket2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="]"
                    android:textColor="@color/dark_green"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/balanceCount"
                    app:layout_constraintTop_toTopOf="@+id/balanceCount" />

                <TextView
                    android:id="@+id/tvBracket1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="["
                    android:textColor="@color/dark_green"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/flFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintVertical_bias="1.0">

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/off_beige"
            app:itemIconTint="@color/nav_item_colors"
            app:itemTextAppearanceActive="@font/poppins_bold"
            app:itemTextAppearanceInactive="@font/poppins_regular"
            app:itemTextColor="@color/nav_item_colors"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>