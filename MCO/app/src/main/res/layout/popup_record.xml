    <View
        android:id="@+id/rectangleHolder1"
        android:layout_width="339dp"
        android:layout_height="200dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/rounded_rectangle_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangleHolder2"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/rectangle_beige"
        android:minHeight="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleHolder1"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Account:"
            android:textColor="@color/primary_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rectangleHolder2" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Category:"
            android:textColor="@color/primary_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/recordAccName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Card"
            android:textColor="@color/primary_gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/recordAccImg"
            app:layout_constraintStart_toEndOf="@+id/recordAccImg"
            app:layout_constraintTop_toTopOf="@+id/recordAccImg"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/recordCatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Education"
            android:textColor="@color/primary_gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/recordCatImg"
            app:layout_constraintStart_toEndOf="@+id/recordCatImg"
            app:layout_constraintTop_toTopOf="@+id/recordCatImg"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/recordNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Dear God sana makatapos pota"
            android:textColor="@color/primary_gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recordCatName"
            app:layout_constraintVertical_bias="0.297" />

        <ImageView
            android:id="@+id/recordAccImg"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView21"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintTop_toTopOf="@+id/textView21"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/recordCatImg"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="@+id/textView23"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/education" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/recordClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/recordDelete"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="@+id/rectangleHolder1"
        app:layout_constraintTop_toTopOf="@+id/rectangleHolder1"
        app:srcCompat="@drawable/close" />

    <ImageView
        android:id="@+id/recordDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/recordEdit"
        app:layout_constraintEnd_toStartOf="@+id/recordEdit"
        app:layout_constraintTop_toTopOf="@+id/recordEdit"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/delete" />

    <ImageView
        android:id="@+id/recordEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangleHolder2"
        app:layout_constraintTop_toTopOf="@+id/rectangleHolder1"
        app:srcCompat="@drawable/edit" />

    <LinearLayout
        android:id="@+id/amtLL"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="252dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="â‚±"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/recordAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="5,700.00"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="210dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/recordMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Nov"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/recordDay"
        app:layout_constraintTop_toTopOf="@+id/recordDay" />

    <TextView
        android:id="@+id/recordDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="21"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/recordYr"
        app:layout_constraintTop_toTopOf="@+id/recordYr" />

    <TextView
        android:id="@+id/recordYr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="2024"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/recordEdit"
        app:layout_constraintTop_toBottomOf="@+id/amtLL" />


</androidx.constraintlayout.widget.ConstraintLayout>