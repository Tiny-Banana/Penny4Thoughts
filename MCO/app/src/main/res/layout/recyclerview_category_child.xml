<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/child_cat_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/giftbox" />

    <TextView
        android:id="@+id/child_cat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Awards"
        android:textColor="@color/primary_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/child_cat_img"
        app:layout_constraintStart_toEndOf="@+id/child_cat_img"
        app:layout_constraintTop_toTopOf="@+id/child_cat_img"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/categoryMore"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ellipsis" />
</androidx.constraintlayout.widget.ConstraintLayout>